{{ ansible_managed | comment }}

[Unit]
Description=ciadpi
After=network-online.target

[Service]
Type=simple

ExecStart=/usr/local/bin/ciadpi -i 127.0.0.1 -p {{ ciadpi_port }} --auto=torst --timeout 3 --tlsrec 3+s --disorder 1

SyslogIdentifier=ciadpi
Restart=always
RestartSec=15s

[Install]
WantedBy=multi-user.target
